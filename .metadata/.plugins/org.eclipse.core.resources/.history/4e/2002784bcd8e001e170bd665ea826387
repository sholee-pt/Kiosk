package DGU;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.util.*;

public class Grade_2019111679_024 extends JFrame {
    // 첫 번째 프로그램의 변수들
    private JTextField tf = new JTextField(10);
    private Vector<String> v = new Vector<String>();
    private JList<String> nameList = new JList<String>(v);

    // 두 번째 프로그램의 변수들
    private String[] fruits = {"사과", "배", "체리"};
    private ImageIcon[] images = {
        new ImageIcon("c:\\Q202\\images\\apple.png"),
        new ImageIcon("c:\\Q202\\images\\pear.png"),
        new ImageIcon("c:\\Q202\\images\\cherry.png")};
    private JLabel imgLabel = new JLabel();
    private JComboBox<String> strCombo = new JComboBox<String>(fruits);

    public Grade_2019111679_024() {
        // 프레임 설정
        setTitle("Integrated Grade Program");
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        Container c = getContentPane();
        c.setLayout(new FlowLayout());

        // 첫 번째 프로그램의 컴포넌트 추가
        c.add(new JLabel("이름 입력 후 <Enter> 키"));
        c.add(tf);
        v.addAll(Arrays.asList("사과", "배", "체리"));
        nameList.setVisibleRowCount(5);
        nameList.setFixedCellWidth(100);
        c.add(new JScrollPane(nameList));

        // 두 번째 프로그램의 컴포넌트 추가
        imgLabel.setIcon(images[0]);
        c.add(strCombo);
        c.add(imgLabel);

        // 첫 번째 프로그램의 이벤트 리스너
        tf.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                JTextField t = (JTextField)e.getSource();
                v.add(t.getText());
                t.setText("");
                nameList.setListData(v);
            }
        });

        // 두 번째 프로그램의 이벤트 리스너
        strCombo.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                JComboBox<String> cb = (JComboBox<String>)e.getSource();
                int index = cb.getSelectedIndex();
                imgLabel.setIcon(images[index]);
            }
        });

        // 프레임 크기 및 가시성 설정
        setSize(350, 400);
        setVisible(true);
    }

    public static void main(String[] args) {
        new Grade_2019111679_024();
    }
}
