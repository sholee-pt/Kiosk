package DGU;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.util.Scanner;

public class Grade_2019111679_026 extends JFrame {
    JLabel label; // JLabel 선언
    JButton btn; // JButton 선언
    int w, h;

    public Grade_2019111679_026() {
    	Scanner sc = new Scanner(System.in);
    	
        setTitle("Image button");
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        Container c = getContentPane();
        c.setLayout(new FlowLayout()); // FlowLayout 사용
        
        System.out.print("이미지의 가로 길이를 입력하세요: ");
        w = sc.nextInt();
        System.out.print("이미지의 세로 길이를 입력하세요: ");
        int h = sc.nextInt();

        ImageIcon normal = new ImageIcon("c:\\Q202\\images\\apple.png");
        ImageIcon rollover = new ImageIcon("c:\\Q202\\images\\apple.png");
        ImageIcon pressed = new ImageIcon("c:\\Q202\\images\\appleB.png");

        transformImageSize trans = new transformImageSize();
        ImageIcon rnormal = trans.transformImageSize(normal, w, h);
        ImageIcon rpressed = trans.transformImageSize(rollover, w, h);
        ImageIcon rrollover = trans.transformImageSize(pressed, w, h);

        btn = new JButton("apple", rnormal);
        btn.setPressedIcon(rpressed);
        btn.setRolloverIcon(rrollover);

        label = new JLabel("Button pressed");
        label.setFont(new Font("맑은 고딕", Font.BOLD, 15));
        label.setVisible(false);

        c.add(btn);
        c.add(label);

        btn.addMouseListener(new MouseAdapter() {
            public void mousePressed(MouseEvent e) {
                label.setVisible(true);
            }
            public void mouseReleased(MouseEvent e) {
                label.setVisible(false);
            }
        });

        setSize(250, 150);
        setVisible(true);
    }

    public static void main(String[] args) {
        new Grade_2019111679_026();
    }
}
