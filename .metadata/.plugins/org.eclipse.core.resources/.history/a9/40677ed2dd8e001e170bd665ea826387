package DGU;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.util.Scanner;

public class Grade_2019111679_026 extends JFrame {
    JLabel label; // JLabel 객체 선언
    JButton btn; // JButton 객체 선언
    int w, h; // 이미지의 가로와 세로 길이를 저장할 변수

    public Grade_2019111679_026() {
        Scanner sc = new Scanner(System.in); // Scanner 객체 생성
        
        // 사용자에게 이미지의 가로와 세로 길이 입력 요청
        System.out.print("이미지의 가로 길이를 입력하세요: ");
        w = sc.nextInt();
        System.out.print("이미지의 세로 길이를 입력하세요: ");
        h = sc.nextInt();

        // ImageIcon 객체 생성
        ImageIcon normal = new ImageIcon("c:\\Q202\\images\\apple.png");
        ImageIcon rollover = new ImageIcon("c:\\Q202\\images\\apple.png");
        ImageIcon pressed = new ImageIcon("c:\\Q202\\images\\appleB.png");

        // 이미지 크기를 조정하는 객체 생성 및 메소드 호출
        transformImageSize trans = new transformImageSize();
        ImageIcon rnormal = trans.transformImageSize(normal, w, h);
        ImageIcon rpressed = trans.transformImageSize(rollover, w, h);
        ImageIcon rrollover = trans.transformImageSize(pressed, w, h);

        // JButton 설정
        btn = new JButton("apple", rnormal); // 버튼에 이미지 아이콘 지정
        btn.setPressedIcon(rpressed); // 눌렸을 때의 아이콘 설정
        btn.setRolloverIcon(rrollover); // 마우스가 위에 있을 때의 아이콘 설정

        // JLabel 설정
        label = new JLabel("Button pressed");
        label.setFont(new Font("맑은 고딕", Font.BOLD, 15)); // 폰트 설정
        label.setVisible(false); // 초기 상태에서는 보이지 않게 설정

        // 컴포넌트 추가
        c.add(btn);
        c.add(label);

        // 마우스 리스너 추가: 버튼 클릭 시 JLabel의 표시 상태 변경
        btn.addMouseListener(new MouseAdapter() {
            public void mousePressed(MouseEvent e) {
                label.setVisible(true); // 버튼을 누르면 라벨 보이게 함
            }
            public void mouseReleased(MouseEvent e) {
                label.setVisible(false); // 버튼에서 손을 떼면 라벨 숨김
            }
        });

        // JFrame 설정
        setSize(250, h+100); // 창 크기 설정
        setVisible(true); // 창을 보이게 함
    }

    public static void main(String[] args) {
        new Grade_2019111679_026(); // 프로그램 실행
    }
}
